<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    >

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="24dp"
        android:src="@drawable/ic_trash_24dp"
        android:layout_gravity="start"
        />

    <LinearLayout
        android:id="@+id/swipeable"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:background="@drawable/bg_item_agenda"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/item_number"
                android:layout_gravity="start"
                android:textAppearance="@style/Text"
                android:layout_height="wrap_content"
                android:layout_width="24dp"
                />

            <TextView
                android:id="@+id/item_title"
                android:textAppearance="@style/Text"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/item_duration"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:textAppearance="@style/Text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:drawableLeft="@drawable/ic_time_24dp"
                android:drawableStart="@drawable/ic_time_24dp"
                android:drawablePadding="2dp"
                />

        </LinearLayout>

        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="4dp"-->
            <!--android:layout_weight="1"-->
            <!--android:paddingRight="16dp"-->
            <!--android:paddingLeft="16dp"-->
            <!--&gt;-->

            <TextView
                android:id="@+id/item_description"
                android:layout_gravity="start"
                android:textAppearance="@style/Detail"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />

        <!--</LinearLayout>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/item_last_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_person_24dp"
                android:drawableStart="@drawable/ic_person_24dp"
                android:drawablePadding="2dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textAppearance="@style/Detail"
                />

        </RelativeLayout>

