<resources>
    <style name="MeetlingTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
    </style>

    <!--<style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">-->
        <!--<item name="color">@android:color/white</item>-->

    <!--</style>-->

    <style name="MeetlingTheme.NoActionBar" parent="MeetlingTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MeetlingDialog" parent="MeetlingTheme" >
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="MeetlingTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Text">
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textColor">#333</item>
    </style>

    <style name="Small" parent="Text">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Detail" parent="Text">
        <item name="android:textSize">@dimen/text_detail</item>
        <item name="android:textColor">#888</item>
    </style>

    <style name="Header" parent="Text">
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Form" parent="MeetlingTheme">
        <item name="android:paddingTop">16dp</item>
    </style>

</resources>
